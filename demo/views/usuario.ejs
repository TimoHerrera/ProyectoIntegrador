<%-include('./partials/head') %> 
       
<% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogeado')  %> 
  <% }else {%>
    <%- include('./partials/Header')  %> 
  <% } %> 

        <section class="info-usuario container products-wrapper">
            <div class="row">
                <div class="img-container offset-3 col-2">
                    
                </div>
                <div class="data-container col-6">
                    <div class="d-flex align-items-center ">
                        <h1 class="main-title"><%= infoUser.nombre%>
                            <a href="/usuario/usuario-edit">
                                <i class="fas fa-cog"></i>
                            </a>
                        </h1>
                        <a class="btn mt-3 ml-4" href="">SEGUIR</a>
                    </div>
                    <div>
                        <ul class="">
                            <li>8 productos</li>
                            <li>200 seguidores</li>
                            <li>300 comentarios</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
       
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Mis productos</h2>
                </div>
                <!-- Show mis productos -->
                <% for(let i = 0; i < infoUser.Producto.length ; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                            <a href="/productos/prodDetail/<%= infoUser.Producto[i].id %>"></a>
                            <figure class="product-box_image">
                                <img src=<%= infoUser.Producto[i].imagen_producto %> alt="productimage">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= infoUser.Producto[i].nombre_producto%></h2>
                                <p> <%= productos[i].descripcion_producto%></p>
                                <p>12 Comentarios</p>
                        </a>
                    </section>
                </div>
                 <% } %>
            </div>
        </div>
                 

<%-include('./partials/footer') %>