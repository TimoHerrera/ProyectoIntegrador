<%-include('./partials/head') %> 
	
<%-include('./partials/header') %>
    
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Resultados de búsqueda</h2>
        </div>
        <h2 class="col-12"> </h2>
			<div class="container products-wrapper">
				<div class="row">
                 <% if (productos.length>0) { %>
                <% for (let i = 0; i < 5; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/productos/prodDetail/<%= productos[i].id_producto %>"> 

                            <figure class="product-box_image">
                                <img src=<%= productos[i].imagen_producto %> alt="productimage">
                            </figure>

                            <article class="product-box_data">
                                <h2><%= productos[i].nombre_producto %></h2>
                                <p><%= productos[i].descripcion_producto %></p>
                                <p>Comentarios: 3</p>
                            </article>
                        </a>
                    </section>
                </div>
                <% } %>
                <% } else {%>
					<h2>No hay resultados para su criterio de búsqueda</h2>
					<% } %>
                
            </div>
        </div>

<%-include('./partials/footer') %>